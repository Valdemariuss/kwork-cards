mixin card(data)
    .card
        a(href="#")
            img.card__img(src=data.img.src alt=data.img.alt width=data.img.width height=data.img.height)
        .card__content
            .card__title
                a(href="#").card__crop= data.title
            .card__info
                a(href="#").card-user
                    span.card-user__status(class=data.user.online ? '_online': '')
                    span.card-user__name= data.user.name
                .card-rate
                    span.card-rate__icon
                    span.card-rate__value= data.rate.value
                    span.card-rate__vote (#{data.rate.vote})
            .card__footer
                    .card-favorites(class=data.favorites ? '_active': '')
                        .tooltip
                            .card-favorites__icon
                    .card__price= data.price
                        | &#8381;


